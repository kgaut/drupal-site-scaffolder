{
  "name": "kgaut/drupal-site-scaffolder",
  "description": "Composer template for a drupal website",
  "keywords": ["drupal","drupal8"],
  "homepage": "https://github.com/kgaut/drupal-site-scaffolder",
  "license": "GNU GPL V2",
  "authors": [
    {
      "name": "Kevin Gautreau",
      "email": "contact@kgaut.net",
      "homepage": "https://www.kgaut.net",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [{
    "type": "composer",
    "url": "https://packagist.drupal-composer.org"
  }],
  "require": {
    "composer/installers": "~1.0",
    "derhasi/composer-preserve-paths": "0.1.*",
    "drupal/drupal": "8.*",
    "davidbarratt/custom-installer": "dev-master",
    "cweagans/composer-patches": "^1.3",
    "drupal/piwik": "8.*",
    "drupal/metatag": "8.*"
  },
  "scripts": {
    "post-install-cmd": [
      "sh ./scripts/post-install.sh"
    ]
  },
  "config": {
    "vendor-dir": "vendor"
  },
  "extra": {
    "installer-paths": {
      "www/": ["type:drupal-core"],
      "www/modules/contrib/{$name}/": ["type:drupal-module"],
      "www/themes/contrib/{$name}/": ["type:drupal-theme"],
      "www/libraries/{$name}/": ["type:drupal-library"],
      "drush/contrib/{$name}/": ["type:drupal-drush"]
    },
    "preserve-paths": [
      "www/modules/contrib",
      "www/themes/contrib",
      "www/libraries",
      "www/sites/default/settings.php",
      "www/sites/default/files"
    ],
    "patches": {
    }
  }
}
